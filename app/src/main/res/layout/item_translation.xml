<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">

    <ImageButton
        android:layout_width="wrap_content"
        android:id="@+id/is_favorite"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_bookmark_black_24dp"
        android:layout_centerVertical="true"
        android:background="@null"
        android:tint="@color/colorBlueGray3"
        android:contentDescription="@string/text_favorites" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/is_favorite"
        android:layout_toLeftOf="@+id/languages_text">
        <TextView
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"
            android:id="@+id/input_text"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:id="@+id/translation_text"
            android:textColor="@color/colorGray7"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/languages_text"
        android:textSize="12sp"
        android:textColor="@color/colorGray7"
        android:layout_centerVertical="true" />


</RelativeLayout>